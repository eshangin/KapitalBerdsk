@model BuildingObjectListItemModel

@{
    ViewData["Title"] = Model.Name;
}

<h2>
    @ViewData["Title"] 
    <a class="btn btn-xs btn-link" asp-action="Edit" asp-route-id="@Model.Id">редактировать</a>
</h2>

<div class="row">
    <div class="col-md-4">
        <div class="well">
            <dl class="dl-horizontal m-b-0">
                <dt title="@Html.DisplayNameFor(modelItem => Model.Price)">@Html.DisplayNameFor(modelItem => Model.Price)</dt>
                <dd>@Html.DisplayFor(modelItem => Model.Price)</dd>

                <dt title="@Html.DisplayNameFor(modelItem => Model.PaidByCustomer)">@Html.DisplayNameFor(modelItem => Model.PaidByCustomer)</dt>
                <dd>@Html.DisplayFor(modelItem => Model.PaidByCustomer)</dd>

                <dt>@Html.DisplayNameFor(modelItem => Model.CostPrice)</dt>
                <dd>@Html.DisplayFor(modelItem => Model.CostPrice)</dd>

                <dt>@Html.DisplayNameFor(modelItem => Model.RealPrice)</dt>
                <dd>@Html.DisplayFor(modelItem => Model.RealPrice)</dd>

                <dt>@Html.DisplayNameFor(modelItem => Model.ResponsibleEmployeeName)</dt>
                <dd>                    
                    <a asp-controller="Employee" asp-action="Details" asp-route-id="@Model.ResponsibleEmployeeId">
                        @Html.DisplayFor(modelItem => Model.ResponsibleEmployeeName)
                    </a>
                </dd>

                <dt>@Html.DisplayNameFor(modelItem => Model.ContractDateStart)</dt>
                <dd>@Html.DisplayFor(modelItem => Model.ContractDateStart)</dd>

                <dt>@Html.DisplayNameFor(modelItem => Model.ContractDateEnd)</dt>
                <dd>@Html.DisplayFor(modelItem => Model.ContractDateEnd)</dd>

                <dt>@Html.DisplayNameFor(modelItem => Model.Status)</dt>
                <dd>@Html.DisplayFor(modelItem => Model.Status)</dd>
            </dl>
        </div>
    </div>
    <div class="col-md-8">
        @Html.Partial("PdSectionsListPartial", new Tuple<int, IEnumerable<PdSectionModel>>(Model.Id, Model.PdSections))
    </div>
</div>
