@model KapitalBerdsk.Web.Classes.Models.BusinessObjectModels.BuildingObjectModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label"></label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ResponsibleEmployeeId" class="control-label"></label>
    <select asp-for="ResponsibleEmployeeId" asp-items="Model.Employees" class="form-control">
        <option value="">-- Не выбран --</option>
    </select>
    <span asp-validation-for="ResponsibleEmployeeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ContractDateStart" class="control-label"></label>
    <div class="input-group date" data-bdatepicker>
        <input type="text" asp-for="ContractDateStart" class="form-control" />
        <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
    </div>
    <span asp-validation-for="ContractDateStart" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ContractDateEnd" class="control-label"></label>
    <div class="input-group date" data-bdatepicker>
        <input type="text" asp-for="ContractDateEnd" class="form-control" />
        <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
    </div>
    <span asp-validation-for="ContractDateEnd" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Status" class="control-label"></label>
    <select asp-for="Status" asp-items="Html.GetEnumSelectList<KapitalBerdsk.Web.Classes.Data.Enums.BuildingObjectStatus>()" class="form-control"></select>
    <span asp-validation-for="Status" class="text-danger"></span>
</div>
@Html.HiddenFor(model => model.IsCreateMode)
@if (!Model.IsCreateMode)
{
    <div class="checkbox">
        <label>
            <input type="checkbox" asp-for="IsInactive" /> @Html.DisplayNameFor(m => m.IsInactive)
        </label>
    </div>
}
<div class="form-group">
    <a class="btn btn-default" asp-action="Index">Отмена</a>
    <input type="submit" value="Сохранить" class="btn btn-primary" />
</div>