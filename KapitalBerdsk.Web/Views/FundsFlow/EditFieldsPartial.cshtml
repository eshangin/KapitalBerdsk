@model KapitalBerdsk.Web.Models.BusinessObjectModels.EditFundsFlowModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Date" class="control-label"></label>
    
    <div class="input-group date" data-bdatepicker>
        <input type="text" asp-for="Date" class="form-control" />
        <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
    </div>
    <span asp-validation-for="Date" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="EmployeeId" class="control-label"></label>
    <select asp-for="EmployeeId" asp-items="Model.Employees" class="form-control">
        <option value="">-- Не выбран --</option>
    </select>
    <span asp-validation-for="EmployeeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Income" class="control-label"></label>
    <input asp-for="Income" class="form-control" />
    <span asp-validation-for="Income" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Outgo" class="control-label"></label>
    <input asp-for="Outgo" class="form-control" />
    <span asp-validation-for="Outgo" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="PayType" class="control-label"></label>
    <select asp-for="PayType" asp-items="Html.GetEnumSelectList<KapitalBerdsk.Web.Data.FundsFlow.PaymentType>()" class="form-control"></select>
    <span asp-validation-for="PayType" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="BuildingObjectId" class="control-label"></label>
    <select asp-for="BuildingObjectId" asp-items="Model.BuildingObjects" class="form-control">
        <option value="">-- Не выбран --</option>
    </select>
    <span asp-validation-for="BuildingObjectId" class="text-danger"></span>
</div>
<div class="form-group">
    <a class="btn btn-default" asp-controller="FundsFlow" asp-action="Index">Отмена</a>
    <input type="submit" value="Сохранить" class="btn btn-primary" />
</div>