@model KapitalBerdsk.Web.Classes.Models.BusinessObjectModels.EditPdSectionModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="SelectedBuildingObjectId" />
<div class="form-group">
    <label asp-for="BuildingObjectId" class="control-label"></label>
    <select asp-for="BuildingObjectId" asp-items="Model.BuildingObjects" class="form-control"></select>
    <span asp-validation-for="BuildingObjectId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group b-emp-selection">
    <div class="clearfix">
        <label asp-for="EmployeeId" class="control-label"></label>
        <div class="pull-right checkbox m-0">
            <label>
                <input asp-for="UseOneTimeEmployee" type="checkbox" class="b-emp-selection__one-time-cbx"> <small>Разовый?</small>
            </label>
        </div>
    </div>
    <select asp-for="EmployeeId" asp-items="Model.Employees" class="form-control b-emp-selection__emp-input @(Model.UseOneTimeEmployee ? "hidden" : "")">
        <option value="">-- Не выбран --</option>
    </select>
    <input asp-for="OneTimeEmployeeName" type="text" class="form-control b-emp-selection__one-time-emp-input @(Model.UseOneTimeEmployee ? "" : "hidden")" />
    <span asp-validation-for="EmployeeId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label"></label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
@Html.HiddenFor(model => model.IsCreateMode)
<div class="form-group">
    <a class="btn btn-default" asp-controller="BuildingObject" asp-action="Details" asp-route-id="@Model.SelectedBuildingObjectId">Отмена</a>
    <input type="submit" value="Сохранить" class="btn btn-primary" />
    @if (!Model.IsCreateMode)
    {
        <div class="pull-right">
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-link">Удалить</a>
        </div>
    }
</div>
