@model ManageIndexViewModel
@{
    ViewData["Title"] = "Настройки";
}

@Html.Partial("_StatusMessage", Model.StatusMessage)

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<h4>Добавить пользователя</h4>
<div class="row">
    <div class="col-md-6">
        <form asp-action="SendInvitation" method="post">
            <div class="form-group">
                <label asp-for="UserInvitationViewModel.Email"></label>
                <input asp-for="UserInvitationViewModel.Email" class="form-control" />
                <span asp-validation-for="UserInvitationViewModel.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Послать имейл с приглашением</button>
        </form>
    </div>
</div>

<hr />

<h4>Изменить пароль</h4>
<div class="row">
    <div class="col-md-6">
        <form asp-action="ChangePassword" method="post">
            <div class="form-group">
                <label asp-for="ChangePasswordViewModel.NewPassword"></label>
                <input asp-for="ChangePasswordViewModel.NewPassword" class="form-control" />
                <span asp-validation-for="ChangePasswordViewModel.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChangePasswordViewModel.ConfirmPassword"></label>
                <input asp-for="ChangePasswordViewModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="ChangePasswordViewModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
